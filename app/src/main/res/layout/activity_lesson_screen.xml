<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LessonScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:id="@+id/topLayout"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/b_attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:onClick="b_attendance"
            android:text="Attendance"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/b_lessons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b_lessons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:onClick="b_lessons"
            android:text="Lessons"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/b_feedback"
            app:layout_constraintStart_toEndOf="@+id/b_attendance" />

        <Button
            android:id="@+id/b_feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:onClick="b_feedback"
            android:text="Feedback"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/b_lessons"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lessonsLayout"
        android:layout_below="@+id/topLayout"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Educational Meeting Lessons"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <Button
            android:id="@+id/b_lesson1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="b_lesson1"
            android:text="Lesson #1"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/b_lesson2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Lesson #2"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/b_lesson3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Lesson #3"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/b_lesson4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Lesson #4"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/b_lesson5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Lesson #5"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
</RelativeLayout>