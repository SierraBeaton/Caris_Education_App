<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">


    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="10"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMiddle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/b_meeting1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="@id/b_meeting1"
            android:text="Meeting 1"
            android:visibility="visible" />

        <Button
            android:id="@+id/b_meeting2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@id/b_meeting2"
            android:text="Meeting 2"
            android:visibility="visible" />


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addNewMeet"
        android:layout_alignBottom="@id/layoutMiddle"
        android:layout_alignEnd="@id/layoutMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="bottom"
        android:layout_margin="16dp"
        app:backgroundTint="@color/Gold"
        app:srcCompat="@drawable/ic_add_circle_black_24dp" />



</RelativeLayout>


